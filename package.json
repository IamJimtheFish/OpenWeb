{
  "name": "openweb",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "corepack pnpm -r --filter \"./packages/**\" run build",
    "check": "corepack pnpm -r --filter \"./packages/**\" run check",
    "test": "vitest run",
    "test:ci": "corepack pnpm test && corepack pnpm update:agents -- --services=",
    "dev": "tsx scripts/dev.ts",
    "migrate": "tsx scripts/migrate.ts",
    "update:agents": "tsx scripts/update_agents_status.ts",
    "api": "tsx packages/api/src/server.ts",
    "mcp": "tsx packages/mcp/src/server.ts",
    "worker": "tsx packages/crawler/src/worker.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "@mozilla/readability": "^0.6.0",
    "better-sqlite3": "^11.10.0",
    "cheerio": "^1.1.2",
    "express": "^4.21.2",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
